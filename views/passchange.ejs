
<section>
    <div class="jumbotron jumbotron-fluid jumbotron-top">
        <div class="jumbo-text text-center">
            <h1>Change Password</h1>
        </div>
    </div>
</section>

<div class="form-border">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form action="/user/passchange?_method=PUT" method="post">

                <div class="row">

                    <div class="col-12 col-md-10 mx-auto">
                        <%- include('partials/alerts'); %>
                    </div>

                    <div class="col-12 col-md-10 mx-auto">
                        <div class="form-group">
                            <input type="password" name="pass" class="form-control my-input"
                                placeholder="Enter new password" />
                        </div>
                    </div>

                    <div class="col-12 col-md-10 mx-auto">
                        <div class="form-group">
                            <input type="password" name="pass2" class="form-control my-input"
                                placeholder="Repeat password" />
                        </div>
                    </div>

                    <div class="col-12 col-md-10 mx-auto mb-4">
                        <input type="submit" class="btn btn-block btn-succ" value="Set new password"></input>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

