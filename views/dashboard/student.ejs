<div class="container">
  <h3>My Classes</h3>
  <table class="table table-striped table-responsive-sm">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Taught by</th>
        <th scope="col">Timings</th>
        <th scope="col">Join</th>
      </tr>
    </thead>
    <tbody>
      <% user.classes.forEach(course => { %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.teacher.username %></td>
        <td><%= course.timing %></td>
        <td>
          <button
            type="button"
            class="btn btn-success btn-sm join"
            data-join="<%= course.id %>"
          >
            Join Class
          </button>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
