<section>
  <div class="jumbotron jumbotron-fluid jumbotron-top">
    <div class="jumbo-text text-center">
      <h1>Register</h1>
    </div>
  </div>
</section>

<div class="form-border">
  <div class="row">
    <div class="col-md-12 mx-auto">

      <form action="/register/" method="post">

        <div class="row">

          <div class="col-12 col-md-6">
            <div class="form-group">
              <input type="text" name="student_name" class="form-control my-input" placeholder="Full Name (Required)"
                required>
            </div>
          </div>

          <div class="col-12 col-md-6 ">
            <div class="form-group">
              <input type="email" name="student_email" class="form-control my-input" placeholder="Email (Required)"
                required>
            </div>
          </div>

          <div class="col-12 col-md-6 ">
            <div class="form-group">
              <input type="number" min="0" name="student_phone" class="form-control my-input"
                placeholder="Phone (Required)" required>
            </div>
          </div>


          <div class="col-12 col-md-6">
            <div class="form-group">

              <select class="form-control" name="student_gender">
                <option selected disabled hidden>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
              </select>

            </div>
          </div>

          <div class="col-12 col-md-6">
            <div class="form-group">
              <input type="text" name="student_city" id="cityPicker" class="form-control my-input" placeholder="City">
            </div>
          </div>



          <div class="col-12 col-md-6">
            <div class="form-group">
              <select class="form-control" name="student_cls">
                <option selected disabled hidden>Select Class</option>
                <option value="1">Class 1</option>
                <option value="2">Class 2</option>
                <option value="3">Class 3</option>
                <option value="4">Class 4</option>
                <option value="5">Class 5</option>
                <option value="6">Class 6</option>
                <option value="7">Class 7</option>
                <option value="8">Class 8</option>
                <option value="9">Class 9</option>
                <option value="10">Class 10</option>
                <option value="11">Class 11</option>
                <option value="12">Class 12</option>
              </select>
            </div>
          </div>



          <div class="col-12 col-md-6">
            <div class="form-group">
              <select class="form-control" name="student_board">
                <option selected disabled hidden>Select Board</option>
                <option value="ICSE">ICSE</option>
                <option value="CBSE">CBSE</option>
                <option value="IB">IB</option>
                <option value="IGCSE">IGCSE</option>
                <option value="State Boards">State Boards</option>
              </select>
            </div>
          </div>

          <div class="col-12 col-md-6">
            <div class="form-group">
              <input type="number" name="student_marks" class="form-control my-input" placeholder="Student Marks">
            </div>
          </div>

          <div class="col-12 col-md-6">
            <div class="form-group">
              <input type="text" name="student_gaurdianName" class="form-control my-input"
                placeholder="Gaurdian's Name">
            </div>
          </div>


          <div class="col-12 col-md-6">
            <div class="form-group">
              <input type="password" name="student_password" class="form-control my-input" placeholder="Password">
            </div>
          </div>

          <div class="col-12 col-md-6 ">
            <div class="form-group">
              <input type="password" name="student_confpassword" class="form-control my-input"
                placeholder="Confirm Password">
            </div>
          </div>

          <div class="col-12 col-md-10 mx-auto">

            <a class="text-danger ml-4">
              <% if( msg != ''){ %>
              <div class="alert alert-danger" role="alert"><%= msg %></div>
              <% } %>
            </a>

          </div>


          <div class="col-12 col-md-10 mx-auto mb-2">

            <input type="submit" class="btn btn-block btn-succ" value="Create My Account"></input>

          </div>

        </div>

      </form>


      <div class="col-12 col-md-10 mx-auto">
        <p class="small mt-3">By signing up, you are indicating that you have read and agree to the <a href="#"
            class="ps-hero__content__link">Terms of Use</a> and <a href="#">Privacy Policy</a>.
        </p>

        <div class="d-inline">
          <h6>Have an Account ? <a href="/login/">Log In</a> Here.</h6>
        </div>

      </div>

    </div>
  </div>
</div>

