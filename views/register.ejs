<section>
    <div class="jumbotron jumbotron-fluid jumbotron-top">
        <div class="jumbo-text text-center">
            <h1>Register a user</h1>
        </div>
    </div>
</section>

<div class="form-border">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <form action="/user/register" method="post">

                <div class="row">


                    <div class="col-12 col-md-10 mx-auto">
                        <div class="form-group">
                            <input type="text" name="username" class="form-control my-input" placeholder="Username"
                                value="<%= typeof username != 'undefined' ? username : '' %>" />
                        </div>
                    </div>
                    <div class="col-12 col-md-10 mx-auto">
                        <div class="form-group">
                            <input type="email" name="email" class="form-control my-input" placeholder="Email"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                        </div>
                    </div>

                    <div class="col-12 col-md-10 mx-auto">
                        <div class="form-group">
                            <input type="password" name="password" class="form-control my-input" placeholder="Password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                    </div>

                    <div class="col-12 col-md-10 mx-auto">
                        Assign Role:
                        <br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="role" id="student" value="student">
                            <label class="form-check-label" for="student">Student</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="role" id="teacher" value="teacher">
                            <label class="form-check-label" for="teacher">Teacher</label>
                        </div>
                    </div>
                    <br>

                    <div class="col-12 col-md-10 mx-auto mb-4">
                        <input type="submit" class="btn btn-block btn-succ" value="Register"></input>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

