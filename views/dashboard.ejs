<section>
  <div class="container-fluid">
    <%- include('dpartials/alerts'); %>
    <div class="row">
      <div class="col-12 col-md-3 mb-2">
        <div class="card shadow">
          <div class="card-body">
            <h4 class="card-title">
              Welcome, <%= currentUser.fullname.split(' ')[0] %>
            </h4>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Name: </strong><%= currentUser.fullname%>
            </li>
          </ul>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Username: </strong><%= currentUser.username%>
            </li>
          </ul>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Email: </strong><%= currentUser.email%>
            </li>
          </ul>
          <div class="card-footer">
            <% if(currentUser.role === 'admin'){ %>
            <%-include('dpartials/newuserbtn') %> <% } %> <% if(currentUser.role
            === 'teacher'){ %> <%-include('dpartials/newclassbtn') %> <% } %>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-9">
        <div class="card shadow">
          <div class="card-body">
            <h4 class="card-title">Classes</h4>
            <ul class="nav nav-tabs">
              <li class="nav-item">
                <a class="nav-link nl active" aria-current="page" href=""
                  >Today</a
                >
              </li>
              <li class="nav-item">
                <a class="nav-link nl" aria-current="page" href="">Upcoming</a>
              </li>
              <li class="nav-item">
                <a class="nav-link nl" href="">Past</a>
              </li>
            </ul>
            <div class="table-responsive">
              <table class="table table-striped table-hover align-middle">
                <thead>
                  <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Topic</th>
                    <th scope="col">Teacher</th>
                    <th scope="col">Subject</th>
                    <th scope="col">Class</th>
                    <th scope="col">Duration</th>
                    <th scope="col">Time</th>
                    <th scope="col">Date</th>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.17.1/moment.min.js"></script>
<script>
  let classes = [];
  fetch("/dashboard/classes")
    .then((res) => res.json())
    .then((data) => {
      classes = data.classes;
      groupAll();
      renderClasses(today);
    })
    .catch((err) => console.log(err));

  const navLinks = document.querySelectorAll(".nl");
  const tbody = document.querySelector("tbody");
  let past = [];
  let today = [];
  let upcoming = [];
  navLinks.forEach((navlink) => {
    navlink.addEventListener("click", (e) => {
      e.preventDefault();
      navLinks.forEach((navlink) => {
        navlink.classList.remove("active");
      });
      navlink.classList.add("active");
      let category = navlink.innerText;
      if (category === "Past") {
        renderClasses(past);
      } else if (category === "Today") {
        renderClasses(today);
      } else {
        renderClasses(upcoming);
      }
    });
  });
  function groupAll() {
    classes.forEach((c) => {
      let dt = c.when;
      if (
        new Date(dt).setHours(0, 0, 0, 0) == new Date().setHours(0, 0, 0, 0)
      ) {
        today.push(c);
      } else if (
        new Date(dt).setHours(0, 0, 0, 0) > new Date().setHours(0, 0, 0, 0)
      ) {
        upcoming.push(c);
      } else {
        past.push(c);
      }
    });
    sort(today);
    sort(upcoming);
    sort(past);
  }

  function sort(array) {
    array.sort(function (a, b) {
      return new Date(a.when) - new Date(b.when);
    });
  }
  function renderClasses(array) {
    clear(tbody);
    if (array.length)
      array.forEach((obj) => {
        tbody.innerHTML += `<tr>
          <td><a href="/dashboard/class/${obj._id}">${obj.title}</a></td>
          <td>${obj.topic ? obj.topic : "NA"}</td>
          <td><a href="/dashboard/teacher/${obj.teacher._id}">${
          obj.teacher.fullname
        }</a></td>
          <td>${obj.subject}</td>
          <td>${obj.class}</td>
          <td>${obj.duration.hrs} hrs ${obj.duration.mins} mins</td>
          <td>${format(obj.dt.getHours())}:${format(obj.dt.getMinutes())}</td>
          <td>${obj.dt.getDate()}/${obj.dt.getMonth() + 1}/${obj.dt.getFullYear()}</td>
        </tr>`;
      });
  }
  function format(num) {
    return num < 10 ? "0" + num : num;
  }
  function clear(element) {
    while (element.firstChild) {
      element.removeChild(element.firstChild);
    }
  }
</script>
