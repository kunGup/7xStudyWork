<%- include('partials/head'); %> <%- include('partials/nav'); %>
<%- include('partials/cart-modal'); %>

<% if(!logged_in) {%>

	<section>
	  <div class="jumbotron jumbotron-fluid jumbotron-top">
	    <div class="jumbo-text text-center">
	      <h1>Log In</h1>
	    </div>
	  </div>
	</section>

	<div class="form-border">
	  <div class="row">
	    <div class="col-md-12 mx-auto">
	      <form action="/dashboard" method="post">
	        
	        <div class="row">

	          <div class="col-12 col-md-10 mx-auto">
	            <%- include('partials/alerts'); %>
	          </div>

	          <div class="col-12 col-md-10 mx-auto">
	            <div class="form-group">
	              <input type="username" name="username" class="form-control my-input" placeholder="Enter Your Username" />
	            </div>
	          </div>

	          <div class="col-12 col-md-10 mx-auto">
	            <div class="form-group">
	              <input type="password" name="password" class="form-control my-input" placeholder="Enter Your Password" />
	            </div>
	          </div>

	          <div class="col-12 col-md-10 mx-auto mb-4">
	            <input type="submit" class="btn btn-block btn-succ" value="Log In"></input>
	          </div>

	          <div class="col-12 col-md-10 mx-auto mb-4">
	            <h6>Don't Have an Account ? <a href="/#contactus"> Contact us </a> !</h6>
	          </div>
	        </div>
	      </form>
	    </div>
	  </div>
	</div>

<% } else { %>

	<section>
	  <div class="jumbotron jumbotron-fluid jumbotron-top">
	    <div class="jumbo-text text-center">
	      <h1>Dashboard</h1>
	    </div>
	  </div>
	</section>


	<section style="margin: 0 3%;">
		<div class="container" style="padding: 4% 0 4% 0;">
		  <div class="row">
		  <div class="col-12 col-md-6">
		  <div class="card shadow">
			<div class="card-body">
			  <h2 class="card-title"><i class="fa fa-user" aria-hidden="true"></i> Welcome, <%= student_name%></h2>
			  <p><span style="font-size: 18px;color: blue;"><i class="fa fa-sign-in" aria-hidden="true"></i> 
				Logged In As :</span><span style="color: rgb(53, 53, 53);"> <%=student_id%> </span></p>
			</div>
			</div>
		  </div>
		
		</div>
		</div>
		</section>

	<div class="container">
	  <!-- Tabs -->
	<section id="tabs">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 ">
					<nav>
						<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
							<a class="nav-item nav-link active" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Payments Status</a>

							<a class="nav-item nav-link " id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Course status</a>

						</div>
					</nav>
					<div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">

						<div class="tab-pane fade show active" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
							 <div class="col-12 col-md-10 mx-auto">
					            <%- include('partials/alerts'); %>
					          </div>

					        <% if(payments.length > 0) {%>
								<table class="table">
						          <thead>
						            <tr>
						              <th scope="col">Date</th>
						              <th scope="col">Amount</th>
						              <th scope="col">Remarks</th>
						            </tr>
						          </thead>
						          <tbody>
						            <% for(var i in payments) { %>
						            <tr>
						              <td><%- payments[i].date %></td>
						              <td><%- payments[i].amount %></td>
						              <td><%- payments[i].info %></td>
						            </tr>
						            <% } %>
						          </tbody>
						        </table>
					        <%} else {%>
					        	No recent payments found.
					        <%}%>

						</div>

						<div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
							<% for(var i in batches) { %>
								<% var batch_id = batches[i].id; %>
								<% var batch_name = batches[i].name; %>
								<% var teacher_id = batches[i].teacher_id; %>
								<% var batch_subject = batches[i].subject; %>
								<% var batch_grade = batches[i].grade; %>
								 <h4 class="card-text exams-names"><i class="fa fa-check" aria-hidden="true"></i> <%=batch_name%></h4>
								 <li> Batch ID: <%= batch_id %>
								 <li> Subject: <%= batch_subject %>
								 <li> Grade: <%= batch_grade %>
								 <li> Teacher: <%= teacher_id %>
								 <li> Batch Status: <%=batch_statuses[i]%>
								<br>
								<br>
								<br>
							<%}%>

							<h2> Overall Remarks </h2>
							<li> <%=student_info%>
						</div>
						
					</div>
				
				</div>
			</div>
		</div>
	</section>
	<!-- ./Tabs -->
	</div>

<% } %>


<style>
  /* Tabs*/

#tabs{
	background: #ffffff;
    color: rgb(0, 0, 0);
}
#tabs h6.section-title{
    color: #eee;
}

#tabs .nav-tabs .nav-item.show .nav-link, .nav-tabs .nav-link.active {
    color: #f3f3f3;
    background-color: transparent;
    border-color: transparent transparent #f3f3f3;
    border-bottom: 4px solid !important;
    font-size: 20px;
    font-weight: bold;
}
#tabs .nav-tabs .nav-link {
    border: 1px solid transparent;
    border-top-left-radius: .25rem;
    border-top-right-radius: .25rem;
    color: rgb(0, 0, 0);
    font-size: 20px;
}
</style>


<%- include('partials/footer'); %>